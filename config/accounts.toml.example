default_account = "main"

[accounts.main]
source = "apex"
# Optional: exchange name (defaults to source).
exchange = "apex"
# Optional: the accountId from ApeX payloads.
account_id = ""
# Where this account's data files live.
data_dir = "data/main"
# Optional: base currency for equity/normalization.
base_currency = "USDT"
# Optional: starting equity (used for equity snapshots/backfill).
# Leave blank or remove the line if unknown.
starting_equity = ""
# Optional: disable an account without deleting config.
active = true

[accounts.hl_main]
source = "hyperliquid"
exchange = "hyperliquid"
# Required for Hyperliquid: wallet address (canonicalized to lowercase).
account_id = "0x0000000000000000000000000000000000000000"
data_dir = "data/hl_main"
base_currency = "USDC"
starting_equity = ""
active = false
